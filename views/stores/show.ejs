<!DOCTYPE html>
<html>
  <% include ../partials/head.ejs %>
  <title>Store Detail</title>
  <body>
    <% include ../partials/header.ejs %>
    <div class="container">
      <a class="btn btn-default" role="button" href="/stores"><i class="fa fa-home" aria-hidden="true"></i></i></a>
      <h1>Store Detail</h1>
      <h3><%= store.name %></h3>
      <div class="container">
        <div class="row">
          <div class="col-sm-2">Tier</div>
          <div class="col-sm-10"><%= store.tier%></div>
        </div>
        <div class="row">
          <div class="col-sm-2">Address</div>
          <div class="col-sm-10"><%= store.address%>, <%= store.city%>, <%= store.state%></div>
        </div>
        <div class="row">
          <div class="col-md-2">General comments</div>
          <div class="col-md-10"><%= store.generalComments%></div>
        </div>
      </div>
      <div class="col-xs-12">
        <form action="/stores/delete/<%= store._id%>" method="post">
          <a class="btn btn-default" role="button" href="/stores/edit/<%= store._id%>"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit Store</a>
          <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o" aria-hidden="true"></i> DELETE</button>
        </form>
      </div>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
</html>
