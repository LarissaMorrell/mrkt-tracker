<!DOCTYPE html>
<html>
  <head>
    <title>Store List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/stores/create">Create Store</a></h3>
      <h1>Store List</h1>
      <% if(stores.length>0) { %>
      <table>
        <thead>
          <tr>
            <th>Store Name</th>
            <th>Tier</th>
          </tr>
        </thead>
        <tbody>

          <% for(var i=0; i<stores.length;i++) { %>
            <tr>
              <td><a href="/stores/show/<%= stores[i]._id%>"><%= stores[i].name%></a></td>
              <td><%= stores[i].tier%></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No stores found.</div>
      <% } %>
    </div>
  </body>
</html>