<html lang="en">
<% include ../partials/head.ejs %>
<body>
  <% if(user){ %>
    <div class="logged-in-wrapper">
  <% } else { %>
    <div class="logged-out-wrapper">
  <% } %>
  <% include ../partials/header.ejs %>
    <div class="container ">
        <h1 class="page-header">
          <span class="fa fa-sign-in"></span> Login
        </h1>
        <!-- TODO show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
          <div class="alert alert-danger">
              <%= message %>
          </div>
        <% } %>
        <!-- LOGIN FORM -->
          <div id="login-box" >
            <div class="store-box">
              <form action="/login" method="post">
                <div class="form-group">
                  <label>Email</label>
                  <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Password</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <div class="btn-row">
                  <button type="submit" class="btn btn-primary btn-lg">
                    <span class="fa fa-sign-in fa-lg fa-space-after"></span>Login
                  </button>
                </div>
              </form>
              <hr>
              <p>
                Need an account?
                <a href="/signup">Signup</a>
              </p>
              <p>
                Or go
                <a href="/">home</a>.
              </p>
            </div>
          </div>
        </div>
      <% if(user){ %>
        <div class="logged-in-push"></div>
      <% } else { %>
        <div class="logged-out-push"></div>
      <% } %>
    </div>
  </div>
  <% include ../partials/footer.ejs %>
</body>
</html>
