<!doctype html>
<html>
<% include ../partials/head.ejs %>
<body>
  <% include ../partials/header.ejs %>
  <div class="container">

    <div class="page-header text-center">
      <h1>Profile Page</h1>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-12">
        <div class="well">
          <h3><span class="fa fa-user"></span>
            <%= user.info.firstName + " " + user.info.lastName %>
          </h3>

          <p>
            <strong>Name</strong>: <%= user.info.firstName + " " + user.info.lastName %>
          </p>
          <p>
            <strong>email</strong>: <%= user.local.email %>
          </p>
          <p>
            <strong>Phone</strong>: <%= user.info.phone %>
          </p>
          <p>
            <strong>Company</strong>: <%= user.info.company %>
          </p>
          <p>
            <strong>Address</strong>: <%= user.info.streetAddress%><br>
              <%= user.info.city %>, <%= user.info.state %>
          </p>
        </div>
      </div>

    </div>
  </div>
  <% include ../partials/footer.ejs %>
</body>
</html>
